<div class="container">
  <div class="row">
    <div class="col">
      <% if alert %>
        <p id="alert" class="alert alert-danger"><%= alert %></p>
      <% end %>

      <% if notice %>
        <p id="notice" class="alert alert-success"><%= notice %></p>
      <% end %>

      <h1>New Password</h1>

      <p class="text-muted"><%= t('fields_encrypted_msg') %></p>
      <%= render 'form', password: @password %>
    </div>
  </div>
</div>
