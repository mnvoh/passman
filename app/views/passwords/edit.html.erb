<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= t('edit_password') %></h1>

      <% if alert %>
        <p id="alert" class="alert alert-danger"><%= alert %></p>
      <% end %>

      <% if notice %>
        <p id="notice" class="alert alert-success"><%= notice %></p>
      <% end %>

      <%= render 'form', password: @password %>
    </div>
  </div>
</div>
