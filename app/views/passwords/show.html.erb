<div class="container">
  <div class="row">
    <div class="col">
      <% if notice %>
        <p id="notice" class="alert alert-danger"><%= notice %></p>
      <% end %>

      <div class="password-header mb-5">
        <span class="domain-logo float-left mr-3"
              style="background-image: url(<%= @password.domain_logo %>);">
        </span>
        <div class="float-left">
          <h2 class="p-0 m-0"><%= @password.title %></h2>
          <p class="text-muted"><%= @password.domain %></p>
        </div>
        <div class="clear"></div>
      </div>

      <div class="clearfix"></div>

      <div class="password-display mb-5">
        <span><%= @decrypted_data[0] %></span>
        <p class="description"><%= @decrypted_data[1] %></p>
        <div class="clearfix"></div>
      </div>

      <%=
        link_to 'Edit', edit_password_path(@password),
          class: 'btn btn-success'
        %>
      <%= link_to 'Back', passwords_path, class: 'btn btn-warning' %>
    </div>
  </div>
</div>
