<div class="container">
  <div class="row">
    <div class="col">
      <% if alert %>
        <p id="alert" class="alert alert-warning"><%= alert %></p>
      <% end %>

      <% if notice %>
        <p id="notice" class="alert alert-success"><%= notice %></p>
      <% end %>

      <form id="unlock-form"
            action="<%= show_password_path(@password) %>"
            method="post">
        <%= image_tag 'passman.svg', class: 'logo my-4' %>
        <h5 class="text-center mb-4">
          <%= t('enter_master_password_to_unlock') %>
        </h5>
        <div class="form-group">
          <input type="password"
                 id="master_password"
                 name="master_password"
                 class="form-control"
                 autofocus="autofocus"
                 placeholder="<%= t('master_password') %>" />
        </div>
        <input name="utf8" type="hidden" value="âœ“">
        <input name="authenticity_token"
               type="hidden"
               value="<%= form_authenticity_token %>">
        <div class="form-group">
          <button class="btn btn-primary form-control mb-3" type="submit">
            <%= t('unlock') %>
          </button>
          <%= link_to 'Back', passwords_path, class: 'btn btn-warning form-control' %>
        </div>
      </form>
    </div>
  </div>
</div>
