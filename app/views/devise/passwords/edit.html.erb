<div class="wrapper">
  <div class="header">
    <%= icon 'fas', 'key fa-5x', class: 'header-icon' %>
    <h2>Change your password</h2>
  </div>

  <div class="content">
    <%= form_for(resource, url: user_password_path, method: :put ) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= icon 'fas', 'key fa-2x' %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'New Password' %>
      </div>
      
      <div class="form-group">
        <%= icon 'fas', 'key fa-2x' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Repeat New Password' %>
      </div>

      <% if @minimum_password_length %>
        <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>

      <div class="actions">
        <%= f.submit "Change my password", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
